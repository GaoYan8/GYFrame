<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lLayout_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_alert_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="@color/color_black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_alert_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/color_font_gray_a1"
        android:textSize="17sp" />

    <LinearLayout
        android:id="@+id/ll_alert_is_group_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <!--android:background="@drawable/is_group_item_selector"-->
        <CheckBox
            android:id="@+id/cb_alert_is_group_delete_button"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:button="@null"
            android:checked="true" />

        <TextView
            android:id="@+id/tv_alert_is_group_delete_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_light_gray_b14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_alert_neg"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:gravity="center"
            android:textColor="@color/color_font_gray_a1"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_alert_line"
            android:layout_width="0.5dp"
            android:layout_height="43dp"
            android:layout_weight="0"
            android:background="@color/color_light_gray_b14" />

        <Button
            android:id="@+id/btn_alert_pos"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:gravity="center"
            android:textColor="@color/color_font_gray_a1"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>